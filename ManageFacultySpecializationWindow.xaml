<Window x:Class="MyWpfApp.ManageFacultySpecializationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Faculties and Specializations" Height="1236" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Список факультетов -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <TextBlock Text="Факультети" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
            <DataGrid x:Name="FacultyListGrid" AutoGenerateColumns="True" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </StackPanel>

        <!-- Список специальностей -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
            <TextBlock Text="Спеціальності" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
            <DataGrid x:Name="SpecializationListGrid" AutoGenerateColumns="False" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Specialization Name" Binding="{Binding Name}" Width="200" />
                    <DataGridTextColumn Header="Faculty ID" Binding="{Binding FacultyId}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- Секция добавления -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical" Margin="10">
            <TextBlock Text="Додати факультет" FontWeight="Bold" FontSize="14" Margin="0,10,0,10" />
            <TextBox x:Name="NewFacultyNameInput" Margin="0,0,0,10" />
            <Button Content="Додати факультет" Click="AddFaculty_Click" Width="200" Margin="0,0,0,20" />

            <TextBlock Text="Додати спеціальність" FontWeight="Bold" FontSize="14" Margin="0,10,0,10" />
            <TextBox x:Name="NewSpecializationNameInput" Margin="0,0,0,10" />
            <TextBlock Text="ID факультета:" FontWeight="Bold" Margin="0,0,0,5" />
            <TextBox x:Name="NewFacultyIdInput" Margin="0,0,0,10" />
            <Button Content="Додати спеціальність" Click="AddSpecialization_Click" Width="200" />
        </StackPanel>

        <!-- Секция фильтрации -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10">
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Сортирувати по факультету" FontWeight="Bold" Margin="0,0,0,5" />
                <ComboBox x:Name="FacultyFilterComboBox" Width="200" DisplayMemberPath="Name" />
                <Button Content="Сортирувати" Click="FilterByFaculty_Click" Width="150" Margin="0,10,0,0" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Сортирувати по спеціальності" FontWeight="Bold" Margin="0,0,0,5" />
                <ComboBox x:Name="SpecializationFilterComboBox" Width="200" DisplayMemberPath="Name" />
                <Button Content="Сортирувати" Click="FilterBySpecialization_Click" Width="150" Margin="0,10,0,0" />
            </StackPanel>

            <Button Content="Сбросить фільтр" Click="ResetFilter_Click" Width="150" Margin="10,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
